COMPOSE_PROJECT_NAME=observability-agent
ENV=local
LOCAL_COUNTRY=PE
TENANT_ID=tenant-pe

# Nombre personalizado del collector - Ejemplos:
# - agent-pe-core        (agente principal en Perú)
# - agent-pe-apps        (agente para aplicaciones en Perú)
# - agent-mx-datacenter  (agente en datacenter México)
# - agent-mx-cloud       (agente en cloud México)
# - agent-co-onpremise   (agente on-premise Colombia)
# - agent-co-retail      (agente para tiendas retail Colombia)
COLLECTOR_NAME=agent-pe-default

# Docker Gateway IP - puede ser sobrescrita por DOCKER_GATEWAY_IP desde Makefile
# Por defecto: 172.17.0.1 (Linux), host.docker.internal (Docker Desktop)
GATEWAY_OTLP_ENDPOINT=http://${DOCKER_GATEWAY_IP:-172.17.0.1}:4317

# Memory limits
ALLOY_MEM_LIMIT=512m
NODE_EXPORTER_MEM_LIMIT=128m
CADVISOR_MEM_LIMIT=256m