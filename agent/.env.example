COMPOSE_PROJECT_NAME=agent-pe-prod-ecommerce

# Identificaci\u00f3n geogr\u00e1fica y contexto
COUNTRY_CODE=PE
ENVIRONMENT=prod
SYSTEM_NAME=ecommerce

# Collector metadata
COLLECTOR_NAME=agent-pe-prod-ecommerce
LOG_LEVEL=info

# Gateway central
GATEWAY_HOST=envoy
# Para desarrollo local (misma red Docker): GATEWAY_HOST=envoy
# Para producción externa: GATEWAY_HOST=envoy.talma.com
# Para host local: GATEWAY_HOST=172.17.0.1

GATEWAY_OTLP_ENDPOINT=${GATEWAY_HOST}:4317

# Autenticación (elegir uno)
AUTH_MODE=jwt   # jwt o apikey

# Si AUTH_MODE=jwt (agentes externos)
KEYCLOAK_URL=http://${GATEWAY_HOST}:8090
KEYCLOAK_REALM=observability
KEYCLOAK_CLIENT_ID=agent-pe-prod
KEYCLOAK_CLIENT_SECRET=<obtener_de_keycloak>

# Si AUTH_MODE=apikey (agentes internos)
API_KEY=<generar_key_segura>

# Memory limits
ALLOY_MEM_LIMIT=512m
NODE_EXPORTER_MEM_LIMIT=128m
CADVISOR_MEM_LIMIT=256m