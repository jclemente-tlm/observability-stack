//=============================================================================
// CONFIGURACIÓN GLOBAL
//=============================================================================

logging {
  level    = env("LOG_LEVEL")
  write_to = [loki.relabel.agent_logs.receiver]
}

tracing {
  sampling_fraction = 1.0
  write_to          = [otelcol.exporter.otlp.gateway_otlp.input]
}

//=============================================================================
// 1. RECEIVERS - Recepción de telemetría
//=============================================================================

// 1.1 Recibe telemetría OTLP de aplicaciones locales (gRPC y HTTP)
otelcol.receiver.otlp "agent_receiver" {
  grpc {
    endpoint = "0.0.0.0:4317"
  }

  http {
    endpoint = "0.0.0.0:4318"
  }

  output {
    metrics = [otelcol.processor.attributes.add_collector_info.input]
    logs    = [otelcol.processor.attributes.add_collector_info.input]
    traces  = [otelcol.processor.attributes.add_collector_info.input]
  }
}

// 1.2 Convierte métricas Prometheus a formato OTLP
otelcol.receiver.prometheus "agent_prometheus_converter" {
  output {
    metrics = [otelcol.processor.attributes.add_collector_info.input]
  }
}

//=============================================================================
// 2. PROCESSORS - Procesamiento y enriquecimiento
//=============================================================================

// Agrega información de identificación: tenant, collector, país, instancia
otelcol.processor.attributes "add_collector_info" {
  action {
    key    = "service.name"
    value  = "alloy-agent"
    action = "insert"
  }

  action {
    key    = "tenant_id"
    value  = env("TENANT_ID")
    action = "insert"
  }

  action {
    key    = "collector"
    value  = "agent"
    action = "insert"
  }

  action {
    key    = "collector_name"
    value  = env("COLLECTOR_NAME")
    action = "insert"
  }

  action {
    key    = "collector_instance"
    value  = constants.hostname
    action = "insert"
  }

  action {
    key    = "collector_country"
    value  = env("COUNTRY_CODE")
    action = "insert"
  }

  output {
    metrics = [otelcol.processor.batch.agent_batch.input]
    logs    = [otelcol.processor.batch.agent_batch.input]
    traces  = [otelcol.processor.batch.agent_batch.input]
  }
}

// Agrupa datos en lotes para optimizar el envío al gateway
otelcol.processor.batch "agent_batch" {
  output {
    metrics = [otelcol.exporter.otlp.gateway_otlp.input]
    logs    = [otelcol.exporter.otlp.gateway_otlp.input]
    traces  = [otelcol.exporter.otlp.gateway_otlp.input]
  }
}

//=============================================================================
// 3. EXPORTERS - Exportación al Gateway central
//=============================================================================

// Envía toda la telemetría al Gateway central vía OTLP
otelcol.exporter.otlp "gateway_otlp" {
  client {
    endpoint = env("GATEWAY_OTLP_ENDPOINT")
    tls {
      insecure = true
    }
    headers = {
      "X-Tenant-ID" = env("TENANT_ID"),
    }
  }
}

//=============================================================================
// 4. SCRAPING - Recolección de métricas Prometheus
//=============================================================================

// 4.1 Métricas del propio Agent (autoinstrumentación)
prometheus.exporter.self "agent_self" {}

prometheus.scrape "agent_self" {
  targets    = prometheus.exporter.self.agent_self.targets
  forward_to = [prometheus.relabel.agent_self_metrics.receiver]
}

prometheus.relabel "agent_self_metrics" {
  forward_to = [otelcol.receiver.prometheus.agent_prometheus_converter.receiver]

  rule {
    target_label = "tenant_id"
    replacement  = env("TENANT_ID")
  }

  rule {
    target_label = "collector"
    replacement  = "agent"
  }

  rule {
    target_label = "collector_name"
    replacement  = env("COLLECTOR_NAME")
  }

  rule {
    target_label = "collector_instance"
    replacement  = constants.hostname
  }

  rule {
    target_label = "collector_country"
    replacement  = env("COUNTRY_CODE")
  }
}

// 4.2 Métricas de infraestructura (Node Exporter y cAdvisor)
prometheus.scrape "agent_node_exporter" {
  targets = [
    { "__address__" = "node-exporter:9100", "job" = "node_exporter" },
  ]
  forward_to = [prometheus.relabel.agent_infra_metrics.receiver]
}

prometheus.scrape "agent_cadvisor" {
  targets = [
    { "__address__" = "cadvisor:8080", "job" = "cadvisor" },
  ]
  forward_to = [prometheus.relabel.agent_infra_metrics.receiver]
}

prometheus.relabel "agent_infra_metrics" {
  forward_to = [otelcol.receiver.prometheus.agent_prometheus_converter.receiver]

  rule {
    target_label = "tenant_id"
    replacement  = env("TENANT_ID")
  }

  rule {
    target_label = "collector"
    replacement  = "agent"
  }

  rule {
    target_label = "collector_name"
    replacement  = env("COLLECTOR_NAME")
  }

  rule {
    target_label = "collector_instance"
    replacement  = constants.hostname
  }

  rule {
    target_label = "collector_country"
    replacement  = env("COUNTRY_CODE")
  }
}

//=============================================================================
// 5. OBSERVABILIDAD INTERNA - Logs del propio Agent
//=============================================================================

loki.relabel "agent_logs" {
  rule {
    target_label = "instance"
    replacement  = constants.hostname
  }

  rule {
    target_label = "job"
    replacement  = "integrations/self"
  }

  rule {
    target_label = "tenant_id"
    replacement  = env("TENANT_ID")
  }

  rule {
    target_label = "collector"
    replacement  = "agent"
  }

  rule {
    target_label = "collector_name"
    replacement  = env("COLLECTOR_NAME")
  }

  rule {
    target_label = "collector_instance"
    replacement  = constants.hostname
  }

  rule {
    target_label = "collector_country"
    replacement  = env("COUNTRY_CODE")
  }

  forward_to = [loki.write.gateway_loki.receiver]
}

loki.write "gateway_loki" {
  endpoint {
    url = "http://" + env("DOCKER_GATEWAY_IP") + ":3100/loki/api/v1/push"
    tenant_id = env("TENANT_ID")
  }
}
